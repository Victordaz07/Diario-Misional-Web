#!/bin/sh
# Pre-commit hook for Diario Misional Web

echo "ğŸ” Running pre-commit checks..."

# Run TypeScript type checking
echo "ğŸ“ Checking TypeScript types..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type checking failed"
  exit 1
fi

# Run ESLint
echo "ğŸ”§ Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint checks failed"
  exit 1
fi

# Run Prettier
echo "ğŸ’… Running Prettier..."
npx prettier --check .
if [ $? -ne 0 ]; then
  echo "âŒ Prettier formatting check failed"
  echo "ğŸ’¡ Run 'npx prettier --write .' to fix formatting issues"
  exit 1
fi

# Run unit tests
echo "ğŸ§ª Running unit tests..."
npm run test -- --passWithNoTests
if [ $? -ne 0 ]; then
  echo "âŒ Unit tests failed"
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
exit 0
